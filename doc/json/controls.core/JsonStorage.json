{
	"name": "controls.core.JsonStorage",
	"text": "LocalStorage wrapper with signals and simple interface",

	"content": {
		"Signals": {
			"loaded": { "text": "json was loaded", "internal": false },
			"optionUpdated": { "text": "option changed signal", "internal": false }
		},

		"Methods": {
			"getValue": { "text": "Returns JSON propeprty value by name", "params": [{ "name": "name", "type": "string", "text": "property name" }, { "name": "callback", "type": "function", "text": "callback to return value" }, { "name": "error", "type": "function", "text": "callback to report non-existing value or some kind of error" }], "internal": false },
			"getValueOrDefault": { "text": "Returns JSON propeprty value by name or default value if not exists", "params": [{ "name": "name", "type": "string", "text": "property name" }, { "name": "callback", "type": "function", "text": "callback to return value" }, { "name": "defaultValue", "type": "Object", "text": "default value" }], "internal": false },
			"setValue": { "text": "Save named JSON property", "params": [{ "name": "name", "type": "string", "text": "property name" }, { "name": "value", "type": "Object", "text": "property value" }, { "name": "error", "type": "function", "text": "callback to report error" }], "internal": false },
			"eraseValue": { "text": "Remove property from storage", "params": [{ "name": "name", "type": "string", "text": "property name" }, { "name": "error", "type": "function", "text": "callback to report error" }], "internal": false },
			"onCompleted": { "text": "@private", "params": [], "internal": true }
		}
	}
}