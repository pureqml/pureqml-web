{
	"name": "core.System",
	"text": "object for storing general info about device and platform",

	"content": {
		"Properties": {
			"userAgent": { "text": "browser userAgent value", "internal": false, "type": "string", "defaultValue": "" },
			"language": { "text": "platform language", "internal": false, "type": "string", "defaultValue": "" },
			"browser": { "text": "browser name", "internal": false, "type": "string", "defaultValue": "" },
			"vendor": { "text": "current vendor name", "internal": false, "type": "string", "defaultValue": "" },
			"os": { "text": "operation system name", "internal": false, "type": "string", "defaultValue": "" },
			"webkit": { "text": "webkit supported flag", "internal": false, "type": "bool", "defaultValue": "" },
			"support3dTransforms": { "text": "CSS transforms3d supported flag", "internal": false, "type": "bool", "defaultValue": "" },
			"supportTransforms": { "text": "CSS transforms supported flag", "internal": false, "type": "bool", "defaultValue": "" },
			"supportTransitions": { "text": "CSS transitions supported flag", "internal": false, "type": "bool", "defaultValue": "" },
			"portrait": { "text": "portrait oriented screen flag", "internal": false, "type": "bool", "defaultValue": "this._get('parent')._get('width') < this._get('parent')._get('height')" },
			"landscape": { "text": "landscape oriented screen flag", "internal": false, "type": "bool", "defaultValue": "! this._get('portrait')" },
			"pageActive": { "text": "page active flag", "internal": false, "type": "bool", "defaultValue": "true" },
			"screenWidth": { "text": "device screen width value", "internal": false, "type": "int", "defaultValue": "" },
			"screenHeight": { "text": "device screen height value", "internal": false, "type": "int", "defaultValue": "" },
			"contextWidth": { "text": "@private", "internal": true, "type": "int", "defaultValue": "this._get('context')._get('width')" },
			"contextHeight": { "text": "@private", "internal": true, "type": "int", "defaultValue": "this._get('context')._get('height')" }
		},

		"Methods": {
			"onContextWidthChanged": { "text": "@private", "params": [], "internal": true },
			"onContextHeightChanged": { "text": "@private", "params": [], "internal": true },
			"_updateLayoutType": { "text": "@private", "params": [], "internal": true },
			"constructor": { "text": "@private", "params": [], "internal": true }
		}
	}
}